{
	"compilerOptions": {
		"target": "es2018",
		"module": "esnext",
		"lib": ["es2018", "dom"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["index.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
